#!/bin/bash

# dont forget to add manually nm and gnome-power-manager, with aptitude so that
# you dont get unnecessary clutter

su -c ' \
apt-get update && \
apt-get dist-upgrade && \
apt-get install --no-install-recommends \
libghc-xmonad-contrib-dev ghc xmonad xorg xmobar trayer build-essential offlineimap \
chromium-browser subversion preload sudo suckless-tools vim vim-gtk unzip \
rxvt-unicode-lite preload texlive latex-beamer evince ttf-inconsolata xdotool vlc urlview \
git exuberant-ctags samba mutt msmtp alsa alsa-util unzip shh \
lxappearance feh pyflakes tmux rtorrent xscreensaver console-kit bash-completion \
ccache distcc \
'
