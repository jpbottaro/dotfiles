#!/bin/bash

# dont forget to add manually nm and gnome-power-manager, with aptitude so that
# you dont get unnecessary clutter

su -c ' \
apt-get update && \
apt-get dist-upgrade && \
apt-get install xmonad xorg xmobar trayer build-essential offlineimap \
chromium-browser subversion preload sudo suckless-tools vim vim-gtk \
git exuberant-ctags samba mutt msmtp alsa python-gnomekeyring unzip \
rxvt-unicode preload texlive evince ttf-inconsolata xdotool mplayer \
'
