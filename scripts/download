#!/bin/bash

# dont forget to add manually nm and gnome-power-manager, with aptitude so that
# you dont get unnecessary clutter

su -c ' \
apt-get update && \
apt-get dist-upgrade && \
apt-get install xmonad xorg xmobar trayer build-essential offlineimap \
chromium-browser subversion preload sudo suckless-tools vim vim-gtk unzip \
rxvt-unicode-lite preload texlive evince ttf-inconsolata xdotool vlc urlview \
git exuberant-ctags samba mutt msmtp alsa unzip \
lxappearance feh pyflakes \
'
