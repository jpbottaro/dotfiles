# general settings
set mbox_type = Maildir
set folder = "~/.mail"
set realname = "Juan Pablo Bottaro"
set sendmail = "msmtp-enqueue"

# gmail settings
set from = "jpbottaro@gmail.com"
set mbox = "+gmail/all_mail"
set spoolfile = "+gmail/INBOX"
set postponed = "+gmail/drafts"

# mailboxes
subscribe alumnos@dc.uba.ar
mailboxes +gmail/INBOX +gmail/all_mail +gmail/juan_pablo +gmail/university gmail/work +gmail/sent_mail +gmail/spam +gmail/trash

# Mutt misc
set delete
set quit
set postpone = ask-no
set signature = "~/.mutt/signature"
set alias_file = "~/.mutt/aliases"
set mail_check = 0
set use_from
set followup_to
unset beep
unset record
unset move

# vim
set editor = "vim +:silent+?^$"
set edit_headers

# indexing
set sort = 'threads'
set sort_aux = 'last-date-received'
set sort_re

# headers
ignore *
unignore Date From To Reply-To Cc Subject
unignore x-mailing-list posted-to
hdr_order Date From To Cc Reply-To Subject
alternative_order text/plain text/html *
auto_view text/html

# ui
unset markers          # mark wrapped lines of text in the pager with a +
set tilde              # tildes as in vim
set smart_wrap         # Don't wrap mid-word
set pager_context = 5  # Retain 5 lines of previous page when scrolling.

# composer
unset mime_forward
set fcc_attach
set include

# mailcap
set mailcap_path=~/.mutt/mailcap:/usr/local/etc/mailcap:/etc/mailcap

# sidebar patch
source `FILE=$HOME/.mutt/sidebar; mutt -v | grep -Fq sidebar || FILE=/dev/null; echo $FILE`

# alias
bind pager R group-reply

source ~/.mutt/auto-view
source ~/.mutt/aliases
source ~/.mutt/bindings
source ~/.mutt/colors
